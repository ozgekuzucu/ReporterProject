@model ReporterProject.EntityLayer.Entities.AppUser

<div class="blog-author-widget widget-item">
    <div class="d-flex flex-column align-items-center">
        <div class="d-flex align-items-center w-100">
            <img src="@Model.ImageUrl" class="rounded-circle flex-shrink-0" alt="Yazar Resmi">
            <div>
                <h4>@Model.Name @Model.Surname</h4>
                <div class="social-links">
                    <a href="https://x.com/@Model.UserName"><i class="bi bi-twitter-x"></i></a>
                    <a href="#"><i class="bi bi-facebook"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                    <a href="#"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>
        <p>@Model.Description</p>
    </div>
</div>

<!--/Blog Author Widget -->
<!-- Search Widget -->
<div class="search-widget widget-item">

    <h3 class="widget-title">Arama Paneli</h3>
    <form action="">
        <input type="text">
        <button type="submit" title="Search"><i class="bi bi-search"></i></button>
    </form>

</div><!--/Search Widget -->